#include <bits/stdc++.h> 

bool ispossible(vector<int> &time,int n,int m,int mid){
	int studentcount=1;
	int sum=0;
	for(int i=0;i<n;i++){
		if(time[i]+sum<=mid){
			sum+=time[i];
		}
		else{
			studentcount++;
			if(studentcount>m || time[i]>mid){
				return false;
			}
			sum=0;
			sum=time[i];
		}
	}
	return true;
}

long long ayushGivesNinjatest(int n, int m, vector<int> time) 
{	
	// Write your code here.
	int s=0,sum=0;
	for(int i=0;i<n;i++){
		sum+=time[i];
	}
	int e=sum,ans=-1;
	int mid=s+(e-s)/2;
	while(s<=e){
		if(ispossible(time,n,m,mid)){
			ans=mid;
			e=mid-1;
		}
		else{
			s=mid+1;
		}
		mid=s+(e-s)/2;
	}
	return ans;
}
