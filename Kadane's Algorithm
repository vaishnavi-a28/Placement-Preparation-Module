class Solution {
public:
    int maxSubArray(vector<int>& nums) {
        int ans = 0 , sum = 0; 
        int n = nums.size() ; 
        if(*max_element(nums.begin() , nums.end())<0){
            return *max_element(nums.begin() , nums.end()) ;
        }
        for(int i = 0 ; i<n ; i++){
            sum += nums[i];
            if(sum<0)
                sum = 0;
            ans = max(ans,sum);
        }
        return ans ;   
    }
};
