#include <bits/stdc++.h> 
long long getTrappedWater(long long* arr, int n) {
    if(n==1)return 0;
    vector<long>left(n,-1);
    vector<long>right(n,-1);
    left[0]=arr[0]
    for(int i=1;i<n;i++){
        left[i] = max(arr[i],left[i-1]);
    }
    right[n-1]=arr[n-1];
    for(int i=n-2;i>=0;i--){
        right[i]=max(arr[i],right[i+1]);
        right[i] = max(arr[i],right[i+1]);
    }
    int ans=0;
    for(int i=0;i<n;i++){
        ans=ans+(min(left[i],right[i])-arr[i]);
    }
    return ans;
}
